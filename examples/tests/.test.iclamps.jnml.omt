# Script for running automated tests on OSB using Travis-CI, see https://github.com/OpenSourceBrain/osb-model-validation

target: ../LEMS_IClamps.xml
engine: jNeuroML
mep: .test.iclamps.mep
experiments:
  izh:
    observables:
      spike times:
        file: 
          path: ../Sim_IClamps.popIzh.v.dat
          columns: [0,1]
          scaling: [1000, 1000]
        spike detection: 
          method: threshold
          threshold: 0
        tolerance: 0.00515
  hh:
    observables:
      spike times:
        file: 
          path: ../Sim_IClamps.popHH.v.dat
          columns: [0,1]
          scaling: [1000, 1000]
        spike detection: 
          method: threshold
          threshold: 0
        tolerance: 0.0046

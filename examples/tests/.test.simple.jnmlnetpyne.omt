# Script for running automated tests on OSB using Travis-CI, see https://github.com/OpenSourceBrain/osb-model-validation

target: ../LEMS_SimpleNet.xml
engine: jNeuroML_NetPyNE
mep: .test.simple.jnmlnrn.mep
experiments:
  0:
    observables:
      spike times:
        file: 
          path: ../Sim_SimpleNet.RS_pop.v.dat
          columns: [0,1]
          scaling: [1000, 1000]
        spike detection: 
          method: threshold
          threshold: 0
        tolerance: 5e-8
  1:
    observables:
      spike times:
        file: 
          path: ../Sim_SimpleNet.RS_pop.v.dat
          columns: [0,2]
          scaling: [1000, 1000]
        spike detection: 
          method: threshold
          threshold: 0
        tolerance: 5e-8
  2:
    observables:
      spike times:
        file: 
          path: ../Sim_SimpleNet.RS_pop.v.dat
          columns: [0,3]
          scaling: [1000, 1000]
        spike detection: 
          method: threshold
          threshold: 0
        tolerance: 5e-8

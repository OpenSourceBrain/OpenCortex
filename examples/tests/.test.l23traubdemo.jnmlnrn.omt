    observables:
      spike times:
        file: 
          path: ../Sim_L23TraubDemo.pop_bask.0.v.dat
          columns: [0,1]
          scaling: [1000, 1000]
        spike detection: 
          method: threshold
          threshold: 0
        tolerance: 0.0
